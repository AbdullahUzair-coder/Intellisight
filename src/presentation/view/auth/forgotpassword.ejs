<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/forgotpassword.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title>Forgot Password</title>
  <style>
    .message {
      margin-top: 10px;
      font-size: 14px;
    }
    .success { color: green; }
    .error { color: red; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Forgot your Password ?</h1>
    <p>No worries — it happens to the best of us.<br/>Just enter your registered email and we’ll help you get back in.</p>

    <form id="forgotForm">
      <div class="email-block">
        <i class="fa-solid fa-envelope icon"></i>
        <input type="email" name="email" id="Email" placeholder="Enter your email" required>
      </div>
      <button type="submit" class="btn-login">Send Reset Link</button>
      <div id="serverMessage" class="message"></div>
    </form>

    <br/>
    <a href="/login">Back to Login</a>
  </div>
  <img class="logo" src="/images/IS12.png">

  <script>
    const form = document.getElementById("forgotForm");
    const serverMessage = document.getElementById("serverMessage");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      serverMessage.textContent = "";

      const email = document.getElementById("Email").value.trim();

      if (!email) {
        serverMessage.textContent = "Please enter your email.";
        serverMessage.className = "message error";
        return;
      }

      try {
        const response = await fetch("/forgotpassword", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email })
        });

        const result = await response.json();

        if (result.success) {
          serverMessage.textContent = "Reset link sent to your email!";
          serverMessage.className = "message success";
        } else {
          serverMessage.textContent = result.message || "Email not found.";
          serverMessage.className = "message error";
        }
      } catch (err) {
        serverMessage.textContent = "Server error. Try again later.";
        serverMessage.className = "message error";
      }
    });
  </script>
</body>
</html>
