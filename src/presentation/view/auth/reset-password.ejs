<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/restpassword.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <title>Reset Password</title>
  <style>
    .message {
      margin-top: 10px;
      font-size: 14px;
    }
    .success { color: green; }
    .error { color: red; }
  </style>
</head>
<body>
  <div class="container">
    <div class="left">
      <p>Enter your new password below.</p>
      <form id="resetForm">
          <div class="password-block">
          <i class="fa-solid fa-key icon"></i>
          <input type="password" id="password" placeholder="New Password" required>
          <i class="fa-solid fa-eye toggle-eye" id="togglePassword"></i>
        </div>
        <div class="cpassword-block">
          <i class="fa-solid fa-key icon"></i>
          <input type="password" id="cpassword" placeholder="Confirm Password" required>
          <i class="fa-solid fa-eye toggle-eye" id="toggleCPassword"></i>
        </div>

        <button type="submit" class="btn-reset">Reset Password</button>
        <div id="serverMessage" class="message"></div>
      </form>

      <div class="ank">
        <a href="/login">Back to Login</a>
      </div>
    </div>

    <div class="right">
      <h1>Reset Password</h1>
      <img class="logo" src="/images/IS12.png">
    </div>
  </div>
  <script>
    const form = document.getElementById("resetForm");
    const serverMessage = document.getElementById("serverMessage");

    // Extract token from URL (/reset-password/:token)
    const token = window.location.pathname.split("/").pop();

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      serverMessage.textContent = "";

      const password = document.getElementById("password").value.trim();
      const cpassword = document.getElementById("cpassword").value.trim();

      if (password === "" || cpassword === "") {
        serverMessage.textContent = "Please fill out both fields.";
        serverMessage.className = "message error";
        return;
      }
      if (password.length < 8 || password.length > 16) {
        serverMessage.textContent = "Password must be between 8 and 16 characters.";
        serverMessage.className = "message error";
        return;
      }
      if (password !== cpassword) {
        serverMessage.textContent = "Passwords do not match.";
        serverMessage.className = "message error";
        return;
      }

      try {
        const response = await fetch(`/reset-password/${token}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ password })
        });

        const result = await response.json();

        if (result.success) {
          serverMessage.textContent = "Password reset successful! Redirecting to login...";
          serverMessage.className = "message success";
          setTimeout(() => {
            window.location.href = "/login";
          }, 2000);
        } else {
          serverMessage.textContent = result.message || "Reset failed.";
          serverMessage.className = "message error";
        }
      } catch (err) {
        serverMessage.textContent = "Server error. Try again later.";
        serverMessage.className = "message error";
      }
    });
     // Toggle  new password visibility (main password)
const togglePassword = document.getElementById("togglePassword");
const passwordInput = document.getElementById("password");

togglePassword.addEventListener("click", () => {
  if (passwordInput.type === "password") {
    passwordInput.type = "text"; // show password
    togglePassword.classList.remove("fa-eye");
    togglePassword.classList.add("fa-eye-slash");
  } else {
    passwordInput.type = "password"; // hide password
    togglePassword.classList.remove("fa-eye-slash");
    togglePassword.classList.add("fa-eye");
  }
});

// Toggle confirm password visibility
const toggleCPassword = document.getElementById("toggleCPassword");
const cPasswordInput = document.getElementById("cpassword");

toggleCPassword.addEventListener("click", () => {
  if (cPasswordInput.type === "password") {
    cPasswordInput.type = "text"; // show confirm password
    toggleCPassword.classList.remove("fa-eye");
    toggleCPassword.classList.add("fa-eye-slash");
  } else {
    cPasswordInput.type = "password"; // hide confirm password
    toggleCPassword.classList.remove("fa-eye-slash");
    toggleCPassword.classList.add("fa-eye");
  }
});

  </script>
</body>
</html>
